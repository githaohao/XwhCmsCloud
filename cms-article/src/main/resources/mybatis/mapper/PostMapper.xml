<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 注意：文件名必须跟Dao类名字一致，因为是根据文件名做关联。 -->
<mapper namespace="com.xwh.article.mapper.PostMapper">
    <select id="postByUser" resultType="com.xwh.article.entity.Post">
        SELECT * FROM post
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
            <if test="param.status != null and param.status != 0">
                AND status = #{param.status}
            </if>
            <if test="param.title != null">
                AND title LIKE CONCAT('%', #{param.title}, '%')
            </if>
            <if test="param.postId != null">
                AND id = #{param.postId}
            </if>
        </where>
    </select>
</mapper>

