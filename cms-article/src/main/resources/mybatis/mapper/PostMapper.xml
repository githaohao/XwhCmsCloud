<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 注意：文件名必须跟Dao类名字一致，因为是根据文件名做关联。 -->
<mapper namespace="com.xwh.article.mapper.PostMapper">
    <select id="postByUser" resultType="com.xwh.article.entity.Post">
        SELECT p.*
        FROM post_tag pt
                 INNER JOIN
             post p
             ON
                 pt.post_id = p.post_id
                 INNER JOIN
             tag t
             ON
                 pt.tag_id = t.tag_id
        <where>
            <if test="userId != null and userId != ''">
                and p.user_id = #{userId}
            </if>
            <if test="param.tagId != null and param.tagId != ''">
                and t.tag_id = #{param.tagId}
            </if>
        </where>
    </select>
</mapper>

